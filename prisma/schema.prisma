generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Contact {
  id        String      @id     @default("CONTACT_SINGLETON")
  email     String
  github    String
  linkedin  String
}

model Education {
  id            String      @id     @default(cuid())
  institution   String
  degree_en     String?
  degree_fr     String?
  fieldOfStudy_en String?
  fieldOfStudy_fr String?
  iconType      String
  startDate     String
  endDate       String
}

model Hobby {
  id        String      @id     @default(cuid())
  name_en   String
  name_fr   String
  picture   String

  @@map("hobbies")
}

enum ProjectStatus {
  ACTIVE
  INACTIVE
  COMPLETED
}

model Project {
  id            String      @id     @default(cuid())
  title      String
  description_en String
  description_fr String
  status        ProjectStatus
  githubUrl     String      @unique
  active        Boolean
  startDate     String
  endDate       String?
  skills        Skill[]

  @@map("projects")
}

model Resume {
  id        String      @id     @default(cuid())
  name      String
  locale    String
  url       String      @unique
  active    Boolean     @default(true)
  createdAt DateTime    @default(now())

  @@map("resumes")
}

model Skill {
  id        String        @id     @default(cuid())
  name      String        @unique
  category  SkillCategory
  icon      String?
  projects  Project[]


  @@map("skills")
}

enum SkillCategory {
  LANGUAGE
  FRAMEWORK
  SOFTWARE
  DATABASE
}

model Testimonial {
  id            String      @id     @default(cuid())
  name          String
  testimonial   String
  status        TestimonialStatus @default(PENDING)

  @@map("testimonials")
}

enum TestimonialStatus {
  PENDING
  APPROVED
  DENIED
}

model Work {
  id        String      @id     @default(cuid())
  company   String
  position_en String
  position_fr String
  startDate String
  endDate   String?

  @@map("works")
}
